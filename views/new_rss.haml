= haml :comun
= haml :cabecera

- if session[:user]
  %form.form-horizontal{:name => "registro", :method => "POST", :action => "/sign_up"}
    %fieldset
      %legend Registro
      .control-group
        %label.control-label{for: "textinput"}
        .controls
          %input#passwordinput.input-xlarge{placeholder: "Link a la RSS",:type => "text", :name => "rss_nueva"}
      .control-group
        %label.control-label{for: "textinput"}
        .controls
          %input#passwordinput.input-xlarge{placeholder: "Titulo de la RSS",:type => "text", :name => "rss_titulo_nueva"}
      .control-group
        %label.control-label{for: "singlebutton"}
        .controls
          %button#singlebutton.btn.btn-primary{name: "singlebutton"} Enviar
- else
  - redirect to('/sign_up')

= haml :pie
