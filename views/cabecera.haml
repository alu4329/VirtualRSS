.navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: "/"} Inicio
      %a.navbar-brand{href: "/sign_up"} Sign Up
    - if session[:user]
      %li.active
        %a{:href => "users/#{User.first(:username => "#{session[:user]}").id}"}
          = session[:user]
      %li
        %a{:href => "/logout"}Desconectar
    - else
      %form.navbar-form.navbar-right{:action=>"/",:method=>"POST", role: "form"}
        .form-group
          %input.form-control{placeholder: "Usuario", type: "text", :name=>"user[username]"}/
        .form-group
          %input.form-control{placeholder: "Password", type: "password", :name=>"user[password]"}/
        %button.btn.btn-success{type: "submit"} Sign in
    / /.navbar-collapse