%cabecera
  %ul
    %li
      %a{:href => "/"}Home   
    - if session[:user]
      %li.active
        %a{:href => "users/#{User.first(:username => "#{session[:user]}").id}"}
          = session[:user]
      %li
        %a{:href => "/logout"}Desconectar
    - else
      %li
        %a{:href => "/sign_up"}Registrarse
      %li
        %a{:href => "/"}Conectarse